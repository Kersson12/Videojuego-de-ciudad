script/source = "extends Button

@onready var label = $Label

var card_value = \"\"
var is_flipped = false
var is_matched = false

signal card_pressed(card)

func _ready():
	pressed.connect(_on_pressed)
	label.text = \"?\"

func setup(value: String):
	card_value = value

func flip():
	is_flipped = true
	label.text = card_value
	disabled = true

func flip_back():
	is_flipped = false
	label.text = \"?\"
	disabled = false

func set_matched():
	is_matched = true
	modulate = Color(0.5, 1, 0.5) # Verde claro

func _on_pressed():
	if not is_flipped and not is_matched:
		card_pressed.emit(self)
"

